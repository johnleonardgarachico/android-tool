<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChicoKoodo.AndroidApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                ImageSource="nihongobenkyou_icon.png"
                BackgroundColor="Transparent"
                HeightRequest="185"
                WidthRequest="185"
                Clicked="OnNavigateNihongoBenkyou"
                SemanticProperties.Hint="Go to Nihongo Benkyou Page" />

            <Label
                Text="日本語を勉強しよう！"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
